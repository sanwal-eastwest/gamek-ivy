<THead@Button+Label>:
    font_size:12
    text_size:self.size
    valign:'middle'
    halign:'center'
    color:(1,1,1,1)
    bold:True
    foreground_color:(1,1,1,1)
<CLabel@Label>:
    font_size:13
    text_size:self.size
    valign:'middle'
    halign:'center'
    color:(1,1,1,1)
    foreground_color:'0,0,1,1'
    
<TableRow@GridLayout>:
    rows:1
    size_hint_x:1
    size_hint_y:None
    height:30
    size:self.size
    padding:2
    spacing:5
    canvas.before:
        Color:
            rgba:(0,0,0,1)
        Rectangle:
            pos:self.pos
            size:self.size
